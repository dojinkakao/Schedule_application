<div class="main">
    <div class="schedule_table">
        <h2>Schedules</h2>
        <a><%= link_to "CREATE NEW", "posts/new", class: "btn createBtn" %></a>
    <table>
     <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Allday</th>
        <th>About</th>
        <th>Delete</th>
      </tr>
     </thead>

    <tbody>
     <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= post.date %></td>
        <td><%= post.allday ? '◯' : '×' %></td>
        <td><%= link_to "CLICK", post, class: "tdBtn" %></td>
        <td><%= link_to "DELETE",post, method: :delete,class: "tdBtn", data: { confirm: "本当に削除しますか？" } %></td>
      </tr>
      <% end %>
     </tbody>
    </div>
</div>